<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C2833"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/NumOfAttempt"
        android:layout_width="48dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:elevation="1dp"
        android:background="@drawable/round_background_white"
        android:gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textStyle="bold"
        android:text="1/5"
        android:textColor="#1F6BB8"/>

    <TextView
        android:id="@+id/Questions"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:textColor="@color/textColor"
        android:background="@drawable/round_background_text"
        android:textSize="20sp"

        android:text="Questions" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/Questions"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/Image_Id"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/Btn_Op1"
            style="@style/Button_Style"
            android:text="Option 1"
            android:textAllCaps="false"
            />
        <TextView
            android:id="@+id/Btn_Op2"
            style="@style/Button_Style"
            android:text="Option 2"
            android:textAllCaps="false"
            />
        <TextView
            android:id="@+id/Btn_Op3"
            style="@style/Button_Style"
            android:text="Option 3"
            android:textAllCaps="false"
            />
        <TextView
            android:id="@+id/Btn_Op4"
            style="@style/Button_Style"
            android:text="Option 4"
            android:textAllCaps="false"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/Btn_Next"
            android:textSize="25sp"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="120dp"
            style="@style/Button_Style"
            android:text="Next"
            android:textAllCaps="false"
            />
    </LinearLayout>

</LinearLayout>